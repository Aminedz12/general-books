%~ \textbf{144. dhamARthaR kAma moVkASxNAM} \hfill{\bf puTa \pageref{159}}
%~ 
%~ \begin{shloka}
%~ dhamARthaRkAma moVkASxNAM idameVkeYkasAdhanaM ||\\
